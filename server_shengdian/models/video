var mongoose = require("mongoose");
var db = require("./db");


var Schema = mongoose.Schema;

var VideoSchema = new Schema({
    title : {type: String},
    path : {type: String},
    cid: {type: String},
    site: {type: String},
    detail: {type: String},
    start_at: {type: Date},
    illustration: {type: String}
});

VideoSchema.index({ title : 1});
VideoSchema.index({ cid : 1});

var Video = db.model('video', VideoSchema);



module.exports = {
    model : Video
};
